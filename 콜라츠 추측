class Solution {
    public int solution(int num) {
        int answer = 0;
        double val=num;
        if(num==1) return 0;
        while(answer!=500){
            answer++;
            if(val % 2==0) val = val /2;
            else{
                val = val*3+1;
        
            }
            if(val==1) break;   
        }
        if(answer==500) return -1;
        return answer;
    }
}
